{
  "name": "@lvlte/rationalize",
  "version": "1.0.2",
  "description": "Represent a floating point number as a rational number",
  "license": "MIT",
  "author": "Eric Lavault <lvlte.code@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvlte/rationalize.git"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "engines": {
    "node": ">=18.20"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist && make-dir dist",
    "build": "tsc && tsc -p tsconfig-cjs.json",
    "postbuild": "(echo { && echo   \"type\": \"commonjs\" && echo }) > ./dist/cjs/package.json",
    "prepublishOnly": "npm test && npm run build && tsc --emitDeclarationOnly true --removeComments false && tsc -p tsconfig-cjs.json --emitDeclarationOnly true --removeComments false"
  },
  "keywords": [
    "rational",
    "number",
    "fraction",
    "float64",
    "integer",
    "tolerance",
    "precision",
    "IEEE754"
  ],
  "devDependencies": {
    "@lvlte/tsconfig": "^1.1.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "make-dir-cli": "^4.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "29.2.5",
    "typescript": "^5.9.3",
    "double.js": "^1.1.0"
  },
  "dependencies": {
    "@lvlte/ulp": "^1.1.1"
  }
}
